<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MP4 to MP3 Converter</title>
    <style>
        /* ===== VARIABLES ===== */
        :root {
            --primary: #4361ee;
            --primary-dark: #3a56d4;
            --secondary: #7209b7;
            --success: #06d6a0;
            --danger: #ef476f;
            --warning: #ffd166;
            --dark: #121212;
            --light: #f8f9fa;
            --gray: #6c757d;
            --gray-light: #e9ecef;
            --shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            --shadow-lg: 0 10px 25px rgba(0, 0, 0, 0.2);
            --radius: 12px;
            --transition: all 0.3s ease;
        }

        /* Dark theme variables */
        .dark-theme {
            --bg-primary: #121212;
            --bg-secondary: #1e1e1e;
            --bg-card: #252525;
            --text-primary: #ffffff;
            --text-secondary: #b0b0b0;
            --border-color: #333333;
            --hover-bg: #2a2a2a;
        }

        /* Light theme variables */
        .light-theme {
            --bg-primary: #f8f9fa;
            --bg-secondary: #ffffff;
            --bg-card: #ffffff;
            --text-primary: #212529;
            --text-secondary: #6c757d;
            --border-color: #dee2e6;
            --hover-bg: #f1f3f4;
        }

        /* ===== RESET & BASE ===== */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
            background: var(--bg-primary);
            color: var(--text-primary);
            line-height: 1.6;
            min-height: 100vh;
            transition: var(--transition);
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        /* ===== HEADER ===== */
        .header {
            text-align: center;
            margin-bottom: 40px;
            padding-bottom: 20px;
            border-bottom: 2px solid var(--border-color);
        }

        .header h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .header p {
            color: var(--text-secondary);
            font-size: 1.1rem;
            max-width: 600px;
            margin: 0 auto;
        }

        /* ===== THEME SWITCHER ===== */
        .theme-switcher {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
        }

        .theme-btn {
            background: var(--bg-card);
            border: 2px solid var(--border-color);
            border-radius: 50%;
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: var(--transition);
            box-shadow: var(--shadow);
        }

        .theme-btn:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadow-lg);
        }

        .theme-btn i {
            font-size: 1.5rem;
            color: var(--primary);
        }

        /* ===== MAIN CONTENT ===== */
        .main-content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            margin-bottom: 40px;
        }

        @media (max-width: 768px) {
            .main-content {
                grid-template-columns: 1fr;
            }
        }

        /* ===== UPLOAD SECTION ===== */
        .upload-section,
        .settings-section {
            background: var(--bg-card);
            border-radius: var(--radius);
            padding: 30px;
            box-shadow: var(--shadow);
            border: 1px solid var(--border-color);
        }

        .section-title {
            font-size: 1.5rem;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 10px;
            color: var(--text-primary);
        }

        .section-title i {
            color: var(--primary);
        }

        /* ===== UPLOAD AREA ===== */
        .upload-area {
            border: 3px dashed var(--border-color);
            border-radius: var(--radius);
            padding: 60px 20px;
            text-align: center;
            cursor: pointer;
            transition: var(--transition);
            margin-bottom: 20px;
            background: var(--bg-secondary);
            position: relative;
            overflow: hidden;
        }

        .upload-area:hover {
            border-color: var(--primary);
            background: var(--hover-bg);
        }

        .upload-area.dragover {
            border-color: var(--success);
            background: rgba(6, 214, 160, 0.1);
        }

        .upload-icon {
            font-size: 4rem;
            color: var(--primary);
            margin-bottom: 20px;
            transition: var(--transition);
        }

        .upload-area:hover .upload-icon {
            transform: scale(1.1);
        }

        .upload-text {
            font-size: 1.2rem;
            color: var(--text-primary);
            margin-bottom: 10px;
        }

        .upload-subtext {
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        .file-input {
            display: none;
        }

        .browse-btn {
            display: inline-block;
            background: var(--primary);
            color: white;
            padding: 12px 30px;
            border-radius: 50px;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            border: none;
            margin-top: 15px;
            font-size: 1rem;
        }

        .browse-btn:hover {
            background: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: var(--shadow);
        }

        /* ===== FILE LIST ===== */
        .file-list {
            margin-top: 30px;
        }

        .file-item {
            display: flex;
            align-items: center;
            padding: 15px;
            background: var(--bg-secondary);
            border-radius: var(--radius);
            margin-bottom: 10px;
            border: 1px solid var(--border-color);
            transition: var(--transition);
        }

        .file-item:hover {
            background: var(--hover-bg);
            transform: translateX(5px);
        }

        .file-icon {
            color: var(--primary);
            font-size: 1.5rem;
            margin-right: 15px;
        }

        .file-info {
            flex: 1;
        }

        .file-name {
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 5px;
            word-break: break-all;
        }

        .file-size {
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        .file-remove {
            color: var(--danger);
            background: none;
            border: none;
            font-size: 1.2rem;
            cursor: pointer;
            padding: 5px;
            border-radius: 50%;
            width: 36px;
            height: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: var(--transition);
        }

        .file-remove:hover {
            background: rgba(239, 71, 111, 0.1);
        }

        /* ===== SETTINGS ===== */
        .settings-group {
            margin-bottom: 25px;
        }

        .settings-label {
            display: block;
            margin-bottom: 10px;
            font-weight: 600;
            color: var(--text-primary);
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .settings-label i {
            color: var(--primary);
        }

        .select-wrapper {
            position: relative;
        }

        .select-wrapper select {
            width: 100%;
            padding: 15px;
            border: 2px solid var(--border-color);
            border-radius: var(--radius);
            background: var(--bg-secondary);
            color: var(--text-primary);
            font-size: 1rem;
            appearance: none;
            cursor: pointer;
            transition: var(--transition);
        }

        .select-wrapper select:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.2);
        }

        .select-wrapper::after {
            content: "▾";
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--primary);
            pointer-events: none;
            font-size: 1.2rem;
        }

        .range-slider {
            width: 100%;
            margin-top: 10px;
        }

        .range-value {
            display: flex;
            justify-content: space-between;
            margin-top: 5px;
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        .checkbox-group {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin-top: 10px;
        }

        .checkbox-item {
            display: flex;
            align-items: center;
            gap: 8px;
            cursor: pointer;
        }

        .checkbox-item input[type="checkbox"] {
            width: 18px;
            height: 18px;
            accent-color: var(--primary);
            cursor: pointer;
        }

        .checkbox-item label {
            color: var(--text-primary);
            cursor: pointer;
            user-select: none;
        }

        /* ===== PROGRESS SECTION ===== */
        .progress-section {
            background: var(--bg-card);
            border-radius: var(--radius);
            padding: 30px;
            margin-top: 30px;
            box-shadow: var(--shadow);
            border: 1px solid var(--border-color);
        }

        .progress-container {
            display: none;
        }

        .progress-container.active {
            display: block;
            animation: fadeIn 0.5s ease;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .progress-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .progress-title {
            font-size: 1.3rem;
            color: var(--text-primary);
        }

        .progress-percent {
            font-size: 1.5rem;
            font-weight: bold;
            color: var(--primary);
        }

        .progress-bar {
            height: 10px;
            background: var(--bg-secondary);
            border-radius: 5px;
            overflow: hidden;
            margin-bottom: 20px;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, var(--primary), var(--secondary));
            border-radius: 5px;
            width: 0%;
            transition: width 0.3s ease;
            position: relative;
        }

        .progress-fill::after {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(90deg, 
                transparent, 
                rgba(255, 255, 255, 0.4), 
                transparent);
            animation: shimmer 2s infinite;
        }

        @keyframes shimmer {
            0% { transform: translateX(-100%); }
            100% { transform: translateX(100%); }
        }

        .progress-info {
            display: flex;
            justify-content: space-between;
            color: var(--text-secondary);
            font-size: 0.9rem;
            margin-bottom: 20px;
        }

        .progress-actions {
            display: flex;
            gap: 10px;
            justify-content: center;
        }

        /* ===== BUTTONS ===== */
        .btn {
            padding: 15px 30px;
            border-radius: 50px;
            border: none;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: var(--transition);
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            min-width: 150px;
        }

        .btn-primary {
            background: var(--primary);
            color: white;
        }

        .btn-primary:hover:not(:disabled) {
            background: var(--primary-dark);
            transform: translateY(-3px);
            box-shadow: var(--shadow);
        }

        .btn-success {
            background: var(--success);
            color: white;
        }

        .btn-success:hover:not(:disabled) {
            background: #05c390;
            transform: translateY(-3px);
            box-shadow: var(--shadow);
        }

        .btn-danger {
            background: var(--danger);
            color: white;
        }

        .btn-danger:hover:not(:disabled) {
            background: #e63562;
            transform: translateY(-3px);
            box-shadow: var(--shadow);
        }

        .btn-secondary {
            background: var(--gray-light);
            color: var(--dark);
        }

        .btn-secondary:hover:not(:disabled) {
            background: #dde1e7;
            transform: translateY(-3px);
            box-shadow: var(--shadow);
        }

        .btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
            transform: none !important;
            box-shadow: none !important;
        }

        /* ===== CONVERTED FILES ===== */
        .converted-section {
            margin-top: 40px;
        }

        .converted-list {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .converted-item {
            background: var(--bg-card);
            border-radius: var(--radius);
            padding: 20px;
            border: 1px solid var(--border-color);
            transition: var(--transition);
        }

        .converted-item:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-lg);
        }

        .converted-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .converted-name {
            font-weight: 600;
            color: var(--text-primary);
            word-break: break-all;
        }

        .converted-size {
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        .converted-actions {
            display: flex;
            gap: 10px;
            margin-top: 15px;
        }

        .converted-actions .btn {
            flex: 1;
            padding: 10px 15px;
            font-size: 0.9rem;
            min-width: auto;
        }

        /* ===== FOOTER ===== */
        .footer {
            text-align: center;
            padding: 30px 0;
            margin-top: 50px;
            border-top: 1px solid var(--border-color);
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        .footer-links {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 15px;
        }

        .footer-link {
            color: var(--primary);
            text-decoration: none;
            transition: var(--transition);
        }

        .footer-link:hover {
            color: var(--secondary);
        }

        /* ===== MEDIA QUERIES ===== */
        @media (max-width: 768px) {
            .header h1 {
                font-size: 2rem;
            }
            
            .main-content {
                gap: 20px;
            }
            
            .upload-section,
            .settings-section {
                padding: 20px;
            }
            
            .section-title {
                font-size: 1.3rem;
            }
            
            .upload-area {
                padding: 40px 15px;
            }
            
            .upload-icon {
                font-size: 3rem;
            }
            
            .btn {
                min-width: 120px;
                padding: 12px 20px;
            }
            
            .converted-list {
                grid-template-columns: 1fr;
            }
            
            .theme-switcher {
                top: 10px;
                right: 10px;
            }
            
            .theme-btn {
                width: 40px;
                height: 40px;
            }
        }

        @media (max-width: 480px) {
            .container {
                padding: 15px;
            }
            
            .header h1 {
                font-size: 1.8rem;
            }
            
            .header p {
                font-size: 1rem;
            }
            
            .upload-text {
                font-size: 1rem;
            }
            
            .progress-actions {
                flex-direction: column;
            }
            
            .progress-actions .btn {
                width: 100%;
            }
            
            .checkbox-group {
                flex-direction: column;
                gap: 10px;
            }
        }

        /* ===== UTILITY CLASSES ===== */
        .hidden {
            display: none !important;
        }

        .text-center {
            text-align: center;
        }

        .mb-20 {
            margin-bottom: 20px;
        }

        .mt-30 {
            margin-top: 30px;
        }

        /* ===== ANIMATIONS ===== */
        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }

        .pulse {
            animation: pulse 2s infinite;
        }

        /* ===== LOADING SPINNER ===== */
        .spinner {
            width: 40px;
            height: 40px;
            border: 4px solid var(--border-color);
            border-top: 4px solid var(--primary);
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="dark-theme">
    <div class="container">
        <!-- Theme Switcher -->
        <div class="theme-switcher">
            <button class="theme-btn" id="themeToggle">
                <i class="fas fa-moon"></i>
            </button>
        </div>

        <!-- Header -->
        <header class="header">
            <h1><i class="fas fa-file-audio"></i> MP4 to MP3 Converter</h1>
            <p>Convert your video files to audio format quickly and securely. No uploads to servers - everything happens in your browser.</p>
        </header>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Upload Section -->
            <section class="upload-section">
                <h2 class="section-title">
                    <i class="fas fa-upload"></i> Upload MP4 Files
                </h2>
                
                <div class="upload-area" id="uploadArea">
                    <div class="upload-icon">
                        <i class="fas fa-cloud-upload-alt"></i>
                    </div>
                    <div class="upload-text">
                        Drag & Drop MP4 files here
                    </div>
                    <div class="upload-subtext">
                        or click to browse (Max: 500MB per file)
                    </div>
                    <button class="browse-btn" id="browseBtn">
                        <i class="fas fa-folder-open"></i> Browse Files
                    </button>
                </div>
                
                <input type="file" id="fileInput" class="file-input" accept=".mp4,.m4v,.mov,.avi,.mkv" multiple>
                
                <div class="file-list" id="fileList">
                    <!-- Files will be added here -->
                </div>
                
                <div class="text-center mt-30">
                    <button class="btn btn-primary" id="convertAllBtn" disabled>
                        <i class="fas fa-bolt"></i> Convert All Files
                    </button>
                </div>
            </section>

            <!-- Settings Section -->
            <section class="settings-section">
                <h2 class="section-title">
                    <i class="fas fa-sliders-h"></i> Conversion Settings
                </h2>
                
                <div class="settings-group">
                    <label class="settings-label">
                        <i class="fas fa-volume-up"></i> Audio Quality
                    </label>
                    <div class="select-wrapper">
                        <select id="qualitySelect">
                            <option value="128">Standard (128 kbps)</option>
                            <option value="192" selected>Good (192 kbps)</option>
                            <option value="256">High (256 kbps)</option>
                            <option value="320">Excellent (320 kbps)</option>
                        </select>
                    </div>
                </div>
                
                <div class="settings-group">
                    <label class="settings-label">
                        <i class="fas fa-file-export"></i> Output Format
                    </label>
                    <div class="select-wrapper">
                        <select id="formatSelect">
                            <option value="mp3" selected>MP3</option>
                            <option value="wav">WAV</option>
                            <option value="ogg">OGG</option>
                            <option value="m4a">M4A</option>
                        </select>
                    </div>
                </div>
                
                <div class="settings-group">
                    <label class="settings-label">
                        <i class="fas fa-cut"></i> Trim Audio (Optional)
                    </label>
                    <div class="checkbox-group">
                        <div class="checkbox-item">
                            <input type="checkbox" id="enableTrim">
                            <label for="enableTrim">Enable audio trimming</label>
                        </div>
                    </div>
                    
                    <div id="trimSettings" class="hidden">
                        <div class="range-slider">
                            <input type="range" id="trimStart" min="0" max="100" value="0" class="range-slider">
                            <div class="range-value">
                                <span>Start: <span id="trimStartValue">0:00</span></span>
                                <span>End: <span id="trimEndValue">0:00</span></span>
                            </div>
                            <input type="range" id="trimEnd" min="0" max="100" value="100" class="range-slider">
                        </div>
                    </div>
                </div>
                
                <div class="settings-group">
                    <label class="settings-label">
                        <i class="fas fa-tags"></i> Metadata
                    </label>
                    <div class="checkbox-group">
                        <div class="checkbox-item">
                            <input type="checkbox" id="keepMetadata" checked>
                            <label for="keepMetadata">Keep original metadata</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="normalizeAudio">
                            <label for="normalizeAudio">Normalize audio volume</label>
                        </div>
                    </div>
                </div>
                
                <div class="settings-group">
                    <label class="settings-label">
                        <i class="fas fa-bolt"></i> Conversion Speed
                    </label>
                    <div class="select-wrapper">
                        <select id="speedSelect">
                            <option value="fast">Fast (Lower quality)</option>
                            <option value="normal" selected>Normal (Balanced)</option>
                            <option value="high">High (Best quality)</option>
                        </select>
                    </div>
                </div>
            </section>
        </div>

        <!-- Progress Section -->
        <section class="progress-section">
            <div class="progress-container" id="progressContainer">
                <div class="progress-header">
                    <div class="progress-title">
                        <i class="fas fa-sync-alt"></i> Converting Files...
                    </div>
                    <div class="progress-percent" id="progressPercent">0%</div>
                </div>
                
                <div class="progress-bar">
                    <div class="progress-fill" id="progressFill"></div>
                </div>
                
                <div class="progress-info">
                    <span id="currentFile">No file selected</span>
                    <span id="timeRemaining">Estimating time...</span>
                </div>
                
                <div class="progress-actions">
                    <button class="btn btn-danger" id="cancelBtn">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                    <button class="btn btn-secondary" id="pauseBtn">
                        <i class="fas fa-pause"></i> Pause
                    </button>
                </div>
            </div>
            
            <div class="text-center" id="noConversion">
                <i class="fas fa-music" style="font-size: 4rem; color: var(--gray); margin-bottom: 20px;"></i>
                <p style="color: var(--text-secondary);">No conversion in progress. Upload MP4 files to get started.</p>
            </div>
        </section>

        <!-- Converted Files Section -->
        <section class="converted-section">
            <h2 class="section-title">
                <i class="fas fa-check-circle"></i> Converted Files
            </h2>
            
            <div class="converted-list" id="convertedList">
                <!-- Converted files will appear here -->
            </div>
            
            <div class="text-center mt-30">
                <button class="btn btn-secondary" id="clearAllBtn">
                    <i class="fas fa-trash"></i> Clear All
                </button>
                <button class="btn btn-success" id="downloadAllBtn" disabled>
                    <i class="fas fa-download"></i> Download All as ZIP
                </button>
            </div>
        </section>

        <!-- Footer -->
        <footer class="footer">
            <p>© 2024 MP4 to MP3 Converter. All conversions happen locally in your browser.</p>
            <div class="footer-links">
                <a href="#" class="footer-link">Privacy Policy</a>
                <a href="#" class="footer-link">Terms of Service</a>
                <a href="#" class="footer-link">Support</a>
            </div>
        </footer>
    </div>

    <script>
        // ===== GLOBAL VARIABLES =====
        let uploadedFiles = [];
        let convertedFiles = [];
        let isConverting = false;
        let isPaused = false;
        let currentTheme = 'dark';

        // ===== DOM ELEMENTS =====
        const themeToggle = document.getElementById('themeToggle');
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('fileInput');
        const browseBtn = document.getElementById('browseBtn');
        const fileList = document.getElementById('fileList');
        const convertAllBtn = document.getElementById('convertAllBtn');
        const progressContainer = document.getElementById('progressContainer');
        const noConversion = document.getElementById('noConversion');
        const progressFill = document.getElementById('progressFill');
        const progressPercent = document.getElementById('progressPercent');
        const currentFile = document.getElementById('currentFile');
        const timeRemaining = document.getElementById('timeRemaining');
        const cancelBtn = document.getElementById('cancelBtn');
        const pauseBtn = document.getElementById('pauseBtn');
        const convertedList = document.getElementById('convertedList');
        const clearAllBtn = document.getElementById('clearAllBtn');
        const downloadAllBtn = document.getElementById('downloadAllBtn');
        const qualitySelect = document.getElementById('qualitySelect');
        const formatSelect = document.getElementById('formatSelect');
        const enableTrim = document.getElementById('enableTrim');
        const trimSettings = document.getElementById('trimSettings');
        const trimStart = document.getElementById('trimStart');
        const trimEnd = document.getElementById('trimEnd');
        const trimStartValue = document.getElementById('trimStartValue');
        const trimEndValue = document.getElementById('trimEndValue');

        // ===== THEME TOGGLE =====
        themeToggle.addEventListener('click', () => {
            if (currentTheme === 'dark') {
                document.body.classList.remove('dark-theme');
                document.body.classList.add('light-theme');
                themeToggle.innerHTML = '<i class="fas fa-sun"></i>';
                currentTheme = 'light';
            } else {
                document.body.classList.remove('light-theme');
                document.body.classList.add('dark-theme');
                themeToggle.innerHTML = '<i class="fas fa-moon"></i>';
                currentTheme = 'dark';
            }
            
            // Save preference to localStorage
            localStorage.setItem('theme', currentTheme);
        });

        // Load saved theme
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme === 'light') {
            document.body.classList.remove('dark-theme');
            document.body.classList.add('light-theme');
            themeToggle.innerHTML = '<i class="fas fa-sun"></i>';
            currentTheme = 'light';
        }

        // ===== FILE UPLOAD HANDLING =====
        browseBtn.addEventListener('click', () => fileInput.click());

        uploadArea.addEventListener('click', () => fileInput.click());

        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.classList.add('dragover');
        });

        uploadArea.addEventListener('dragleave', () => {
            uploadArea.classList.remove('dragover');
        });

        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.classList.remove('dragover');
            const files = Array.from(e.dataTransfer.files);
            handleFiles(files);
        });

        fileInput.addEventListener('change', (e) => {
            const files = Array.from(e.target.files);
            handleFiles(files);
            fileInput.value = ''; // Reset input
        });

        function handleFiles(files) {
            files.forEach(file => {
                // Check file type
                if (!file.type.startsWith('video/') && !['.mp4', '.m4v', '.mov', '.avi', '.mkv'].some(ext => 
                    file.name.toLowerCase().endsWith(ext))) {
                    showNotification('Please upload video files only', 'error');
                    return;
                }

                // Check file size (500MB limit)
                if (file.size > 500 * 1024 * 1024) {
                    showNotification(`File "${file.name}" exceeds 500MB limit`, 'error');
                    return;
                }

                // Check if file already exists
                if (!uploadedFiles.some(f => f.name === file.name && f.size === file.size)) {
                    uploadedFiles.push({
                        file: file,
                        id: Date.now() + Math.random(),
                        status: 'pending'
                    });
                }
            });

            updateFileList();
            updateConvertButton();
        }

        function updateFileList() {
            fileList.innerHTML = '';

            if (uploadedFiles.length === 0) {
                fileList.innerHTML = `
                    <div style="text-align: center; padding: 20px; color: var(--text-secondary);">
                        <i class="fas fa-file-video" style="font-size: 3rem; margin-bottom: 10px;"></i>
                        <p>No files uploaded yet</p>
                    </div>
                `;
                return;
            }

            uploadedFiles.forEach((fileData, index) => {
                const fileItem = document.createElement('div');
                fileItem.className = 'file-item';
                fileItem.innerHTML = `
                    <div class="file-icon">
                        <i class="fas fa-file-video"></i>
                    </div>
                    <div class="file-info">
                        <div class="file-name">${fileData.file.name}</div>
                        <div class="file-size">${formatFileSize(fileData.file.size)}</div>
                    </div>
                    <button class="file-remove" data-index="${index}">
                        <i class="fas fa-times"></i>
                    </button>
                `;
                fileList.appendChild(fileItem);
            });

            // Add event listeners to remove buttons
            document.querySelectorAll('.file-remove').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const index = parseInt(e.currentTarget.dataset.index);
                    uploadedFiles.splice(index, 1);
                    updateFileList();
                    updateConvertButton();
                });
            });
        }

        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }

        function updateConvertButton() {
            convertAllBtn.disabled = uploadedFiles.length === 0;
        }

        // ===== TRIM SETTINGS =====
        enableTrim.addEventListener('change', () => {
            if (enableTrim.checked) {
                trimSettings.classList.remove('hidden');
            } else {
                trimSettings.classList.add('hidden');
            }
        });

        trimStart.addEventListener('input', updateTrimValues);
        trimEnd.addEventListener('input', updateTrimValues);

        function updateTrimValues() {
            const startPercent = trimStart.value;
            const endPercent = trimEnd.value;
            
            // Convert percent to time format (assuming 5 minute max for demo)
            const maxSeconds = 300; // 5 minutes
            const startSeconds = Math.floor((startPercent / 100) * maxSeconds);
            const endSeconds = Math.floor((endPercent / 100) * maxSeconds);
            
            trimStartValue.textContent = formatTime(startSeconds);
            trimEndValue.textContent = formatTime(endSeconds);
            
            // Ensure end is after start
            if (parseInt(endPercent) <= parseInt(startPercent)) {
                trimEnd.value = parseInt(startPercent) + 1;
            }
        }

        function formatTime(seconds) {
            const mins = Math.floor(seconds / 60);
            const secs = seconds % 60;
            return `${mins}:${secs.toString().padStart(2, '0')}`;
        }

        // ===== CONVERSION PROCESS =====
        convertAllBtn.addEventListener('click', startConversion);

        async function startConversion() {
            if (uploadedFiles.length === 0 || isConverting) return;

            isConverting = true;
            isPaused = false;
            
            progressContainer.classList.add('active');
            noConversion.style.display = 'none';
            
            convertAllBtn.disabled = true;
            pauseBtn.innerHTML = '<i class="fas fa-pause"></i> Pause';
            
            const quality = parseInt(qualitySelect.value);
            const format = formatSelect.value;
            const speed = document.getElementById('speedSelect').value;
            
            for (let i = 0; i < uploadedFiles.length; i++) {
                if (!isConverting) break;
                
                while (isPaused) {
                    await sleep(100);
                }
                
                const fileData = uploadedFiles[i];
                fileData.status = 'converting';
                
                currentFile.textContent = `Converting: ${fileData.file.name}`;
                progressPercent.textContent = '0%';
                progressFill.style.width = '0%';
                
                // Simulate conversion progress
                for (let progress = 0; progress <= 100; progress += 5) {
                    if (!isConverting) break;
                    
                    while (isPaused) {
                        await sleep(100);
                    }
                    
                    progressPercent.textContent = `${progress}%`;
                    progressFill.style.width = `${progress}%`;
                    
                    // Calculate remaining time
                    const totalFiles = uploadedFiles.length;
                    const remainingFiles = totalFiles - i - 1;
                    const remainingProgress = 100 - progress;
                    const estimatedSeconds = Math.round((remainingFiles * 10) + (remainingProgress / 5));
                    timeRemaining.textContent = `Estimated: ${formatRemainingTime(estimatedSeconds)}`;
                    
                    await sleep(100); // Simulate work
                }
                
                if (!isConverting) break;
                
                // Generate fake MP3 file for demo
                // In real implementation, use ffmpeg.wasm or similar
                const convertedFile = await simulateConversion(fileData.file, format, quality);
                
                convertedFiles.push({
                    originalName: fileData.file.name,
                    file: convertedFile,
                    format: format,
                    quality: quality,
                    date: new Date().toLocaleString()
                });
                
                fileData.status = 'converted';
                
                // Update progress for next file
                const overallProgress = Math.floor(((i + 1) / uploadedFiles.length) * 100);
                progressPercent.textContent = `${overallProgress}%`;
                progressFill.style.width = `${overallProgress}%`;
            }
            
            // Conversion complete
            isConverting = false;
            convertAllBtn.disabled = false;
            updateConvertedList();
            
            if (convertedFiles.length > 0) {
                downloadAllBtn.disabled = false;
            }
            
            showNotification('Conversion completed successfully!', 'success');
        }

        function simulateConversion(file, format, quality) {
            return new Promise((resolve) => {
                // Create a fake audio file for demo purposes
                // In production, use actual audio conversion library
                const fileName = file.name.replace(/\.[^/.]+$/, "") + '.' + format;
                const fileSize = Math.floor(file.size * 0.1); // Simulate smaller audio file
                
                const blob = new Blob(['Fake audio data for demo'], { 
                    type: `audio/${format === 'mp3' ? 'mpeg' : format}` 
                });
                
                const convertedFile = new File([blob], fileName, {
                    type: `audio/${format === 'mp3' ? 'mpeg' : format}`,
                    lastModified: Date.now()
                });
                
                setTimeout(() => resolve(convertedFile), 500);
            });
        }

        function formatRemainingTime(seconds) {
            if (seconds < 60) return `${seconds} seconds`;
            const minutes = Math.ceil(seconds / 60);
            return `${minutes} minute${minutes > 1 ? 's' : ''}`;
        }

        function sleep(ms) {
            return new Promise(resolve => setTimeout(resolve, ms));
        }

        // ===== CONVERSION CONTROLS =====
        cancelBtn.addEventListener('click', () => {
            isConverting = false;
            progressContainer.classList.remove('active');
            noConversion.style.display = 'block';
            convertAllBtn.disabled = false;
            showNotification('Conversion cancelled', 'warning');
        });

        pauseBtn.addEventListener('click', () => {
            if (!isConverting) return;
            
            isPaused = !isPaused;
            if (isPaused) {
                pauseBtn.innerHTML = '<i class="fas fa-play"></i> Resume';
                showNotification('Conversion paused', 'info');
            } else {
                pauseBtn.innerHTML = '<i class="fas fa-pause"></i> Pause';
                showNotification('Conversion resumed', 'info');
            }
        });

        // ===== CONVERTED FILES MANAGEMENT =====
        function updateConvertedList() {
            convertedList.innerHTML = '';
            
            if (convertedFiles.length === 0) {
                convertedList.innerHTML = `
                    <div style="text-align: center; padding: 40px; color: var(--text-secondary);">
                        <i class="fas fa-music" style="font-size: 3rem; margin-bottom: 15px;"></i>
                        <p>No converted files yet</p>
                    </div>
                `;
                return;
            }
            
            convertedFiles.forEach((fileData, index) => {
                const item = document.createElement('div');
                item.className = 'converted-item';
                item.innerHTML = `
                    <div class="converted-header">
                        <div class="converted-name">${fileData.originalName}</div>
                        <div class="converted-size">${formatFileSize(fileData.file.size)}</div>
                    </div>
                    <div style="color: var(--text-secondary); font-size: 0.9rem; margin-bottom: 10px;">
                        <i class="fas fa-file-audio"></i> ${fileData.format.toUpperCase()} • ${fileData.quality} kbps
                        <br>
                        <i class="fas fa-calendar"></i> ${fileData.date}
                    </div>
                    <div class="converted-actions">
                        <button class="btn btn-success download-btn" data-index="${index}">
                            <i class="fas fa-download"></i> Download
                        </button>
                        <button class="btn btn-secondary play-btn" data-index="${index}">
                            <i class="fas fa-play"></i> Play
                        </button>
                        <button class="btn btn-danger delete-btn" data-index="${index}">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </div>
                `;
                convertedList.appendChild(item);
            });
            
            // Add event listeners
            document.querySelectorAll('.download-btn').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const index = parseInt(e.currentTarget.dataset.index);
                    downloadFile(convertedFiles[index].file);
                });
            });
            
            document.querySelectorAll('.play-btn').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const index = parseInt(e.currentTarget.dataset.index);
                    playFile(convertedFiles[index].file);
                });
            });
            
            document.querySelectorAll('.delete-btn').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const index = parseInt(e.currentTarget.dataset.index);
                    convertedFiles.splice(index, 1);
                    updateConvertedList();
                    if (convertedFiles.length === 0) {
                        downloadAllBtn.disabled = true;
                    }
                });
            });
        }

        function downloadFile(file) {
            const url = URL.createObjectURL(file);
            const a = document.createElement('a');
            a.href = url;
            a.download = file.name;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
            
            showNotification(`Downloaded: ${file.name}`, 'success');
        }

        function playFile(file) {
            const url = URL.createObjectURL(file);
            const audio = new Audio(url);
            audio.controls = true;
            
            // Create modal for audio player
            const modal = document.createElement('div');
            modal.style.cssText = `
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0,0,0,0.8);
                display: flex;
                align-items: center;
                justify-content: center;
                z-index: 10000;
            `;
            
            const player = document.createElement('div');
            player.style.cssText = `
                background: var(--bg-card);
                padding: 30px;
                border-radius: var(--radius);
                max-width: 500px;
                width: 90%;
                text-align: center;
            `;
            
            player.innerHTML = `
                <h3 style="margin-bottom: 20px; color: var(--text-primary);">
                    <i class="fas fa-play-circle"></i> ${file.name}
                </h3>
                <div style="margin-bottom: 20px;">
                    ${audio.outerHTML}
                </div>
                <button class="btn btn-danger" id="closePlayer">
                    <i class="fas fa-times"></i> Close Player
                </button>
            `;
            
            player.appendChild(audio);
            modal.appendChild(player);
            document.body.appendChild(modal);
            
            // Close button
            player.querySelector('#closePlayer').addEventListener('click', () => {
                audio.pause();
                document.body.removeChild(modal);
                URL.revokeObjectURL(url);
            });
            
            // Close on background click
            modal.addEventListener('click', (e) => {
                if (e.target === modal) {
                    audio.pause();
                    document.body.removeChild(modal);
                    URL.revokeObjectURL(url);
                }
            });
        }

        clearAllBtn.addEventListener('click', () => {
            if (convertedFiles.length === 0) return;
            
            if (confirm('Are you sure you want to clear all converted files?')) {
                convertedFiles = [];
                updateConvertedList();
                downloadAllBtn.disabled = true;
                showNotification('All files cleared', 'info');
            }
        });

        downloadAllBtn.addEventListener('click', async () => {
            if (convertedFiles.length === 0) return;
            
            // For demo, just download the first file
            // In production, implement zip.js for multiple files
            if (convertedFiles.length === 1) {
                downloadFile(convertedFiles[0].file);
            } else {
                showNotification('Multiple file download not implemented in demo', 'info');
            }
        });

        // ===== NOTIFICATION SYSTEM =====
        function showNotification(message, type = 'info') {
            // Remove existing notifications
            const existing = document.querySelector('.notification');
            if (existing) existing.remove();
            
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                padding: 15px 25px;
                background: ${type === 'error' ? 'var(--danger)' : 
                           type === 'success' ? 'var(--success)' : 
                           type === 'warning' ? 'var(--warning)' : 'var(--primary)'};
                color: white;
                border-radius: var(--radius);
                box-shadow: var(--shadow-lg);
                z-index: 1000;
                transform: translateX(150%);
                transition: transform 0.3s ease;
                display: flex;
                align-items: center;
                gap: 10px;
                max-width: 400px;
            `;
            
            const icon = type === 'error' ? 'fa-exclamation-circle' :
                        type === 'success' ? 'fa-check-circle' :
                        type === 'warning' ? 'fa-exclamation-triangle' : 'fa-info-circle';
            
            notification.innerHTML = `
                <i class="fas ${icon}"></i>
                <span>${message}</span>
            `;
            
            document.body.appendChild(notification);
            
            // Animate in
            setTimeout(() => {
                notification.style.transform = 'translateX(0)';
            }, 10);
            
            // Auto remove after 3 seconds
            setTimeout(() => {
                notification.style.transform = 'translateX(150%)';
                setTimeout(() => {
                    if (notification.parentNode) {
                        notification.parentNode.removeChild(notification);
                    }
                }, 300);
            }, 3000);
        }

        // ===== INITIALIZE =====
        document.addEventListener('DOMContentLoaded', () => {
            updateFileList();
            updateConvertButton();
            updateConvertedList();
            updateTrimValues();
            
            // Show welcome message
            setTimeout(() => {
                showNotification('Welcome! Upload MP4 files to convert to MP3', 'info');
            }, 1000);
        });

        // ===== KEYBOARD SHORTCUTS =====
        document.addEventListener('keydown', (e) => {
            // Ctrl/Cmd + O to open file dialog
            if ((e.ctrlKey || e.metaKey) && e.key === 'o') {
                e.preventDefault();
                fileInput.click();
            }
            
            // Escape to cancel conversion
            if (e.key === 'Escape' && isConverting) {
                cancelBtn.click();
            }
            
            // Space to pause/resume
            if (e.key === ' ' && isConverting) {
                e.preventDefault();
                pauseBtn.click();
            }
        });
    </script>
</body>
</html>